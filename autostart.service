[Unit]
Description=Water Pump Control Dashboard
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/json-streamlit-relay-tank-level
ExecStart=/home/pi/json-streamlit-relay-tank-level/venv/bin/streamlit run app.py --server.port 8501 --server.address 0.0.0.0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target